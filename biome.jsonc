{
    "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
    "vcs": {
        "enabled": true,
        "clientKind": "git",
        "useIgnoreFile": true
    },
    "files": {
        "ignoreUnknown": false,
        "ignore": []
    },
    "formatter": {
        "enabled": false,
        "indentStyle": "space",
        "indentWidth": 4
    },
    "organizeImports": {
        "enabled": true
    },
    "linter": {
        "enabled": false,
        "rules": {
            "recommended": true,
            "correctness": {
                "noUnusedImports": "error"
            },
            "style": {
                "noNonNullAssertion": "warn"
            },
            "suspicious": {
                "noConsoleLog": "error",
                "noExplicitAny": "warn",
                "noImplicitAnyLet": "warn"
            }
        }
    },
    "javascript": {
        "formatter": {
            "quoteStyle": "double"
        }
    }
}
