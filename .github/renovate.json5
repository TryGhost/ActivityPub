{
  extends: [
    'github>tryghost/renovate-config',
    'docker:pinDigests',
    'docker:disableMajor',
  ],
  platformAutomerge: false,
  schedule: [
    '* 8-11 * * 1,2,3,4',
  ],
  automergeSchedule: [
    '* 8-11 * * 1,2,3,4',
  ],
  lockFileMaintenance: {
    enabled: true,
    automerge: true,
  },
  packageRules: [
    {
      matchDatasources: [
        'docker',
      ],
      automerge: true,
    },
    {
      automerge: false,
      matchPackageNames: [
        '/^@fedify//',
      ],
    },
  ],
}
