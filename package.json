{
  "name": "activitypub",
  "version": "1.0.1",
  "repository": "git@github.com:TryGhost/ActivityPub.git",
  "author": "Ghost Foundation",
  "license": "MIT",
  "main": "src/app.ts",
  "type": "module",
  "scripts": {
    "build": "esbuild src/app.ts --sourcemap --platform=neutral --bundle --packages=external --outfile=dist/app.js",
    "build:watch": "concurrently \"yarn build --watch\" \"node --inspect=0.0.0.0:9229 --watch dist/app.js\"",
    "predev": "docker compose build migrate fake-gcs",
    "dev": "docker compose up activitypub -d --build",
    "dev:standalone": "docker compose up activitypub nginx -d --build",
    "stop": "docker compose stop",
    "db": "docker compose exec mysql mysql -uroot -proot activitypub",
    "fix": "docker compose down --rmi all activitypub activitypub-testing cucumber-tests nginx",
    "logs": "docker compose logs activitypub -f",
    "wipe-db": "docker compose down -v mysql && docker compose up -d activitypub nginx && echo 'ActivityPub DB wiped. You must restart Ghost'",
    "migration": "docker compose run migrate create",
    "migrate": "docker compose up migrate",
    "test:cucumber": "./dev/docker/cucumber-tests",
    "test": "docker compose run --rm migrate-testing up && docker compose run --rm -v \"$(pwd)/dist:/opt/activitypub/dist\" activitypub-testing  yarn _test:all && yarn test:cucumber",
    "_test:types": "tsc --noEmit",
    "test:types": "docker compose run --rm activitypub-testing yarn _test:types",
    "_test:unit": "vitest run --dir src --coverage --reporter=dot '.unit.test.ts'",
    "test:unit": "docker compose run --rm activitypub-testing yarn _test:unit",
    "_test:unit:dev": "vitest --dir src --coverage --reporter=dot '.unit.test.ts'",
    "test:unit:dev": "docker compose run --rm activitypub-testing yarn _test:unit:dev",
    "_test:integration": "vitest run --dir src --coverage --reporter=dot '.integration.test.ts'",
    "test:integration": "docker compose run --rm activitypub-testing yarn _test:integration",
    "_test:code": "vitest run --dir src --coverage --reporter=dot '.test.ts'",
    "test:code": "docker compose run --rm activitypub-testing yarn _test:code",
    "_test:all": "yarn _test:types && yarn _test:code",
    "test:all": "docker compose run --rm activitypub-testing yarn _test:all",
    "_test:single": "vitest run --coverage --reporter=dot",
    "test:single": "docker compose run --rm activitypub-testing yarn _test:single",
    "lint": "biome check",
    "fmt": "biome format --write"
  },
  "files": [
    "src"
  ],
  "devDependencies": {
    "@biomejs/biome": "2.4.4",
    "@cucumber/cucumber": "11.3.0",
    "@faker-js/faker": "9.9.0",
    "@fedify/cli": "1.9.1",
    "@types/html-to-text": "9.0.4",
    "@types/jsonwebtoken": "9.0.10",
    "@types/node": "20.19.33",
    "@types/node-jose": "1.1.13",
    "@types/sanitize-html": "2.16.0",
    "@types/sinon": "17.0.4",
    "@types/uuid": "10.0.0",
    "@vitest/coverage-v8": "2.1.9",
    "concurrently": "9.2.1",
    "esbuild": "0.27.3",
    "nock": "14.0.11",
    "typescript": "5.9.3",
    "vite-tsconfig-paths": "5.1.4",
    "vitest": "2.1.9",
    "wiremock-captain": "3.6.1"
  },
  "dependencies": {
    "@fedify/fedify": "1.9.1",
    "@fedify/hono": "1.9.1",
    "@fedify/redis": "1.9.1",
    "@google-cloud/opentelemetry-cloud-trace-exporter": "2.4.1",
    "@google-cloud/opentelemetry-cloud-trace-propagator": "0.20.0",
    "@google-cloud/profiler": "6.0.4",
    "@google-cloud/pubsub": "4.11.0",
    "@google-cloud/storage": "7.19.0",
    "@hono/node-server": "1.19.9",
    "@js-temporal/polyfill": "0.5.1",
    "@logtape/logtape": "0.12.3",
    "@opentelemetry/api": "1.9.0",
    "@opentelemetry/core": "1.30.1",
    "@opentelemetry/exporter-trace-otlp-proto": "0.57.0",
    "@opentelemetry/resources": "1.30.1",
    "@opentelemetry/sdk-trace-base": "1.30.1",
    "@sentry/node": "8.55.0",
    "awilix": "12.1.1",
    "es-toolkit": "1.44.0",
    "hono": "4.10.7",
    "html-to-text": "9.0.5",
    "ioredis": "5.9.3",
    "jsonwebtoken": "9.0.3",
    "knex": "3.1.0",
    "ky": "1.14.3",
    "linkify-html": "4.3.2",
    "linkifyjs": "4.3.2",
    "mysql2": "3.17.1",
    "node-html-parser": "7.0.2",
    "node-jose": "2.2.0",
    "reflect-metadata": "0.2.2",
    "sanitize-html": "2.17.1",
    "sharp": "0.34.5",
    "url-regex": "5.0.0",
    "uuid": "10.0.0",
    "x-forwarded-fetch": "0.2.0",
    "zod": "4.3.6"
  }
}
